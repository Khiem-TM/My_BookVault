{
  "info": {
    "name": "Book Service - Clean Architecture API",
    "description": "Complete API collection for testing the refactored Book Service with Clean Architecture patterns",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8086",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "bookId",
      "value": "",
      "type": "string"
    },
    {
      "key": "transactionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "reviewId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Book Management (Admin)",
      "item": [
        {
          "name": "Create Physical Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isbn\": \"978-0-13-468599-1\",\n  \"title\": \"Clean Architecture\",\n  \"author\": \"Robert C. Martin\",\n  \"publisher\": \"Prentice Hall\",\n  \"description\": \"A Craftsman's Guide to Software Structure and Design\",\n  \"bookType\": \"PHYSICAL_BOOK\",\n  \"totalQuantity\": 10,\n  \"availableQuantity\": 10\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/books",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "books"]
            }
          }
        },
        {
          "name": "Create Digital Licensed Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isbn\": \"978-1-4919-5128-1\",\n  \"title\": \"Designing Data-Intensive Applications\",\n  \"author\": \"Martin Kleppmann\",\n  \"publisher\": \"O'Reilly Media\",\n  \"description\": \"The Big Ideas Behind Reliable, Scalable, and Maintainable Systems\",\n  \"bookType\": \"DIGITAL_LICENSED_BOOK\",\n  \"rentalPrice\": 9.99,\n  \"rentalDurationDays\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/books",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "books"]
            }
          }
        },
        {
          "name": "Update Book",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Clean Architecture (Updated)\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/books/{{bookId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "books", "{{bookId}}"]
            }
          }
        },
        {
          "name": "Update Inventory",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"totalQuantity\": 15,\n  \"availableQuantity\": 15\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/books/{{bookId}}/inventory",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "books", "{{bookId}}", "inventory"]
            }
          }
        },
        {
          "name": "Update Rental Config",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rentalPrice\": 12.99,\n  \"rentalDurationDays\": 45\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/books/{{bookId}}/rental-config",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "books", "{{bookId}}", "rental-config"]
            }
          }
        },
        {
          "name": "Set Book Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/books/{{bookId}}/status?status=DISABLED",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "books", "{{bookId}}", "status"],
              "query": [
                {
                  "key": "status",
                  "value": "DISABLED"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Book",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/books/{{bookId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "books", "{{bookId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Book Query (Public)",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/books?page=0&size=10&bookType=PHYSICAL_BOOK&status=AVAILABLE",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "bookType",
                  "value": "PHYSICAL_BOOK"
                },
                {
                  "key": "status",
                  "value": "AVAILABLE"
                }
              ]
            }
          }
        },
        {
          "name": "Get Book By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/books/{{bookId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "{{bookId}}"]
            }
          }
        },
        {
          "name": "Search Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/books/search?keyword=clean+architecture",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "search"],
              "query": [
                {
                  "key": "keyword",
                  "value": "clean+architecture"
                }
              ]
            }
          }
        },
        {
          "name": "Get Borrowable Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/books/borrowable",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "borrowable"]
            }
          }
        },
        {
          "name": "Get Rentable Books",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/books/rentable",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "rentable"]
            }
          }
        },
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/books/statistics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books", "statistics"]
            }
          }
        }
      ]
    },
    {
      "name": "3. Book Borrow (User)",
      "item": [
        {
          "name": "Borrow Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": {{bookId}},\n  \"userId\": \"user123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/borrows",
              "host": ["{{baseUrl}}"],
              "path": ["api", "borrows"]
            }
          }
        },
        {
          "name": "Return Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/borrows/{{transactionId}}/return",
              "host": ["{{baseUrl}}"],
              "path": ["api", "borrows", "{{transactionId}}", "return"]
            }
          }
        },
        {
          "name": "Get Active Borrows",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/borrows/active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "borrows", "active"]
            }
          }
        },
        {
          "name": "Get Borrow History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/borrows/history?page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "borrows", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Admin - Get Overdue Borrows",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/borrows/admin/overdue",
              "host": ["{{baseUrl}}"],
              "path": ["api", "borrows", "admin", "overdue"]
            }
          }
        }
      ]
    },
    {
      "name": "4. Book Rental (User)",
      "item": [
        {
          "name": "Rent Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": {{bookId}},\n  \"userId\": \"user123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rentals",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals"]
            }
          }
        },
        {
          "name": "Get Active Rentals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rentals/active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals", "active"]
            }
          }
        },
        {
          "name": "Get Rental History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rentals/history?page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals", "history"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Cancel Rental",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rentals/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Admin - Check Expired Rentals",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rentals/admin/check-expired",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rentals", "admin", "check-expired"]
            }
          }
        }
      ]
    },
    {
      "name": "5. Book Reviews (User)",
      "item": [
        {
          "name": "Create Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": {{bookId}},\n  \"userId\": \"user123\",\n  \"rating\": 5,\n  \"comment\": \"Excellent book on software architecture! Highly recommended for all developers.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reviews"]
            }
          }
        },
        {
          "name": "Update Review",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookId\": {{bookId}},\n  \"userId\": \"user123\",\n  \"rating\": 4,\n  \"comment\": \"Updated: Very good book, but quite dense in some parts.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reviews"]
            }
          }
        },
        {
          "name": "Get Book Reviews",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reviews/book/{{bookId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reviews", "book", "{{bookId}}"]
            }
          }
        },
        {
          "name": "Get My Reviews",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/reviews/my-reviews",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reviews", "my-reviews"]
            }
          }
        },
        {
          "name": "Delete Review",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/reviews/{{reviewId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reviews", "{{reviewId}}"]
            }
          }
        },
        {
          "name": "Get Review Statistics",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/reviews/book/{{bookId}}/statistics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reviews", "book", "{{bookId}}", "statistics"]
            }
          }
        }
      ]
    }
  ]
}
